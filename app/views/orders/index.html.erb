<h1>Listing orders</h1>

<table>
	<tr>
		<th>Order#</th>
	    <th>Item</th>
		<th>Referral Id</th>
	    <th>Quantity</th>
	    <th>Purchase Date</th>
	    <th>Total Payment</th>
		<th></th>
	</tr>

	<% @orders.each do |order| %>
	<tr>
		<td><%= order.id %></td>
		<td><%= order.deal.title %></td>
		<td><%= order.referral_id %></td>
	    <td><%= order.quantity %></td>
	    <td><%= order.purchase_date %></td>
	    <td><%= order.total_payment %></td>
		<td><%= link_to 'Show', order_path(order) %></td>
	</tr>
	<% end %>
</table>

<br />