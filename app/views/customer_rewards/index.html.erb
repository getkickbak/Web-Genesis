<% content_for :link do %>
<% end %>
<% content_for :script do %>
<script type="text/javascript" src="/javascripts/desktop/src/base.js"></script>
<% end %>
<div class="main">
	<div class="main-inner">
		<div class="container">
			<div class="row">
				<div class="span3">
					<div class="widget widget-table action-table">
						<div class="widget-header">
							<i class="icon-map-marker"></i>
							<h3>Merchants</h3>
						</div>
						<div class="widget-content">
							<table class="table table-striped table-bordered">
								<tbody>
									<% @merchants.each do |merchant| %>
									<tr>
										<td class="td-description"><!-- --> <% if merchant.id != @merchant.id %>
										<%= link_to(merchant.name, :controller => "customer_rewards", :merchant_id => merchant.id) %> <!-- --> <% else %>
										<%= link_to(merchant.name, {:controller => "customer_rewards", :merchant_id => merchant.id}, :class => "disabled") %> <!-- --> <% end %> <!-- --></td>
									</tr>
									<% end %>
								</tbody>
							</table>
						</div>
					</div>
				</div>
				<div class="span9">
					<div class="widget">
						<div class="widget-content">
							<p class="lead">
								You have <b><%= @customer.points %> points</b> at <%= @merchant.name %></h3>
							</p>
						</div>
					</div>
					<% rewards = @customer_rewards.all(:mode => :reward, :order => [:points.asc]) %>
					<% prizes = @customer_rewards.all(:mode => :prize, :order => [:points.asc]) %>
					<% rtitle = "Rewards for " + @merchant.name %>
					<% ptitle = "Prizes for " + @merchant.name %>
					<div class="widget widget-table action-table">
						<div class="widget-header">
							<i class="icon-gift"></i>
							<h3><%= rtitle %></h3>
						</div>
						<div class="widget-content">
							<table class="table table-striped table-bordered">
								<thead>
									<tr>
										<th>Rewards</th>
										<th class="td-actions">Points</th>
									</tr>
								</thead>
								<tbody>
									<% rewards.each do |customer_reward| %>
									<tr>
										<td><%= customer_reward.title %></td>
										<td class="td-actions"><%= customer_reward.points %></td>
									</tr>
									<% end %>
								</tbody>
							</table>
						</div>
					</div>
					<div class="widget">
						<div class="widget-content">
							<p class="lead">
								You have <b><%= @customer.prize_points %> prize points</b> at <%= @merchant.name %></h3>
							</p>
						</div>
					</div>
					<div class="widget widget-table action-table">
						<div class="widget-header">
							<i class="icon-star"></i>
							<h3><%= ptitle %></h3>
						</div>
						<div class="widget-content">
							<table class="table table-striped table-bordered">
								<thead>
									<tr>
										<th>Prizes</th>
										<th class="td-actions">Points</th>
									</tr>
								</thead>
								<tbody>
									<% prizes.each do |customer_reward| %>
									<tr>
										<td><%= customer_reward.title %></td>
										<td class="td-actions"><%= customer_reward.points %></td>
									</tr>
									<% end %>
								</tbody>
							</table>
						</div>
					</div>
					<!-- -->
				</div>
			</div>
		</div>
	</div>
</div>