<div class="main">
   <div class="row-fluid">
      <div class="span3"></div>
      <div class="span6">
         <ul class="nav nav-list well">
            <li class="nav-header"> Password Reset </li>
            <%= simple_form_for resource, :url => password_path(resource_name), :html => { :method => :post } do |f| %>
