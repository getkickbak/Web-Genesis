<% content_for :link do %>
<!--[if lt IE 9]>
<link rel="stylesheet" href="/javascripts/desktop/css/add_business-ie8.css"/>
<![endif]-->
<% end %>
<% content_for :script do %>
<!-- -->
<script type="text/javascript" src="/javascripts/desktop/src/business/promotion.js"></script>
<% end %>
<div class="row-fluid">
	<div class="span1"></div>
	<div class="span5">
		<%= simple_form_for @promotion, :html => { :class => 'form-horizontal' } do |f| %>
		<%= f.input :message, :as => :text, :input_html => { :rows => 10 } %>
		<%= f.input :start_date, :as => :date_picker %>
		<%= f.input :end_date, :as => :date_picker %>
		<%= f.button :submit, :class => 'btn-primary' %>
		<% end %>
	</div>
</div>
