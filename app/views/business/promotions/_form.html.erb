<%= simple_form_for @promotion, :html => { :class => 'form-horizontal' } do |f| %>
<fieldset>
   <%= f.input :message, :as => :text, :input_html => { :rows => 10, :class => 'input-xxlarge' } %>
   <%= f.input :start_date, :as => :date_picker, :input_html => { :class => 'input-medium' } %>
   <br />
   <div class="form-actions">
      <%= f.button :submit, 'Create', :class => 'btn btn-primary' %>
      <%= link_to("Cancel", dashboard_path, :class => 'btn') %>
   </div>
   <!-- /form-actions -->
</fieldset>
<% end %>
