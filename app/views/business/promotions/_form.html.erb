<%= simple_form_for @promotion, :html => { :class => 'form-horizontal' } do |f| %>
<fieldset>
   <% if @plan_id > 3 %>
   <%= f.input :customer_segment_id, :collection => CustomerSegment.values[I18n.locale], :include_blank => false, :input_html => { :class => 'input-large' } %>
   <% else %>
   <%= f.input :customer_segment_id, :collection => CustomerSegment.values[I18n.locale].slice(0,1), :include_blank => false, :input_html => { :class => 'input-large' } %>
   <% end %>
   <div class="promotion_text">
		<span>Estimated Size: <%= @segment_count %></span>
	</div>
   <%= f.input :subject, :input_html => { :class => 'input-xxlarge' } %>
   <%= f.input :message, :as => :text, :input_html => { :rows => 10, :class => 'input-xxlarge' } %>
   <%= f.input :photo, :as => :file, :required => false %>
   <%= f.hidden_field :photo_cache %>
   <%= f.input :start_date, :input_html => { :class => 'date_picker input-medium' } %>
   <%= f.input :end_date, :input_html => { :class => 'date_picker input-medium' } %>
   <br />
   <div class="form-actions">
      <%= f.button :submit, 'Create', :class => 'btn btn-primary' %>
      <%= link_to("Cancel", dashboard_path, :class => 'btn') %>
   </div>
   <!-- /form-actions -->
</fieldset>
<% end %>
