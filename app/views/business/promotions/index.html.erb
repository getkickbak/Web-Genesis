<% content_for :link do %>
<% end %>
<% content_for :script do %>
<script type="text/javascript" src="/javascripts/desktop/src/base.js"></script>
<% end %>
<div class="main">
	<div class="main-inner">
		<div class="container">
			<div class="row">
				<div class="span9">
					<div class="widget widget-table action-table">
						<div class="widget-header">
							<i class="icon-rss"></i>
							<h3>Latest Promotions (<%= link_to 'New Promotion', new_promotion_path %>)</h3>
						</div>
						<div class="widget-content">
							<% if @promotions.length > 0 %>
							<ul class="news-items">
								<% @promotions.each do |promotion| %>
								<li>
									<div class="news-item-detail">
										<div class="news-item-title">
											<%= promotion.start_date.strftime("%A %b %d %I:%M%p, %Y") %> (<b><%= promotion.status %></b>)
										</div>
										<p class="news-item-preview">
											<%= promotion.message %>
										</p>
									</div>
									<div class="news-item-date">
										<span class="news-item-day"> <%= promotion.start_date.strftime("%d") %> </span>
										<span class="news-item-month"> <%= promotion.start_date.strftime("%b") %> </span>
									</div>
									<!---->
								</li>
								<!---->
							</ul>
							<% else %>
							<table class="table table-striped table-bordered">
								<tbody>
									<tr>
										<td class="no-data">You have no promotions</td>
									</tr>
								</tbody>
							</table>
							<% end %>
						</div>
					</div>
				</div>
				<%= render 'info' %>
			</div>
		</div>
	</div>
</div>
