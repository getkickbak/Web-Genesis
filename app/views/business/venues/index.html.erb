<% content_for :link do %>
<% end %>
<% content_for :script do %>
<script type="text/javascript" src="/javascripts/desktop/src/base.js"></script>
<% end %>
<div id="main" class="main">
	<div class="main-inner">
		<div class="container">
			<% if current_merchant.status == :pending %>
			<ul class="pager">
				<li class="previous">
					<%= link_to 'Continue Setup', setup_path %>
				</li>
			</ul>
			<% end %>
			<div class="row">
				<div class="span9">
					<div class="widget widget-table action-table">
						<div class="widget-header">
							<i class="icon-map-marker"></i>
							<h3>Venues <% if session[:is_admin] %>(<%= link_to("New Venue", new_venue_path) %>)<% end %></h3>
						</div>
						<div class="widget-content">
							<table class="table table-striped table-bordered">
								<thead>
									<tr>
										<th>Venues</th>
										<th class="td-actions">Actions</th>
									</tr>
								</thead>
								<tbody>
									<% @venues.each do |venue| %>
									<tr>
										<td><%= link_to venue.name, venue_path(venue) %></td>
										<td class="td-actions"><!-- --> <%= link_to(edit_venue_path(venue), :class=>"btn btn-small btn-warning", :title=>"edit") do %> <!-- --><i class="btn-icon-only icon-edit"></i><!-- --> <% end %> </td>
									</tr>
									<% end %>
									<% if @venues.length == 0 %>
									<tr>
										<td colspan="2" class="no-data">You have no venues at the moment.</td>
									</tr>
									<% end %>
								</tbody>
							</table>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
