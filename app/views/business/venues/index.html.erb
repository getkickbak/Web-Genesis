<table>
	<tr>
		<th>Name</th>
		<th></th>
		<th></th>
		<th></th>
	</tr>

	<% @venues.each do |venue| %>
	<tr>
		<td><%= venue.name %></td>
		<td><%= link_to 'Show', venue_path(venue) %></td>
		<td><%= link_to 'Edit', edit_venue_path(venue) %></td>
		<td><%= link_to 'Destroy', venue_path(venue), :confirm => 'Are you sure?', :method => :delete %></td>
	</tr>
	<% end %>
</table>

