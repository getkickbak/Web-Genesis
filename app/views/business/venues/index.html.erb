<% content_for :link do %>
<% end %>
<% content_for :script do %>
<script type="text/javascript" src="/javascripts/desktop/src/business/base.js"></script>
<% end %>
<div class="main">
   <div class="main-inner">
      <div class="container">
         <div class="row">
            <div class="span6">
               <div class="widget widget-table action-table">
                  <div class="widget-header">
                     <i class="icon-map-marker"></i>
                     <h3>Venues Listing (<%= link_to("New Venue", new_venue_path) %><% if current_merchant.status == :pending %>
                        | <%= link_to 'Continue Setup', setup_path %>
                        <% end %>)
                        <!---->
                     </h3>
                  </div>
                  <div class="widget-content">
                     <table class="table table-striped table-bordered">
                        <tbody>
                           <% @venues.each do |venue| %>
                           <tr>
                              <td><%= venue.name %></td>
                              <td class="td-actions">
                              <!-- -->
                              <%= link_to(edit_venue_path(venue), :class=>"btn btn-small btn-warning", :title=>"edit") do %>
                              <!-- -->
                              <i class="btn-icon-only icon-edit"></i>
                              <!-- -->
                              <% end %>
                              </td>
                           </tr>
                           <% end %>
                        </tbody>
                     </table>
                  </div>
               </div>
            </div>
         </div>
      </div>
   </div>
</div>
