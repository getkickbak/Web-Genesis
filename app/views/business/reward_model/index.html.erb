<% content_for :link do %>
<link rel="stylesheet" href="/javascripts/desktop/css/add_business.css"/>
<!--[if lt IE 9]>
<link rel="stylesheet" href="/javascripts/desktop/css/add_business-ie8.css"/>
<![endif]-->
<% end %>
<div class="row-fluid">
   <div class="span3"></div>
   <div class="span6">
      <h1>Reward Model</h1>
      <%= simple_form_for @reward_model, :url => update_reward_model_path do |f| %>
      <%= f.input :rebate_rate %>
      <%= f.input :prize_rebate_rate %>
      <%= f.input :price_per_point, :input_html => { :disabled => 'disabled' } %>
      <%= f.submit %>
      <% end %>
      <% if current_merchant.status == :pending && current_merchant.reward_model %>
      <%= link_to 'Continue Setup', setup_path %>
      <% end %>
   </div>
</div>
