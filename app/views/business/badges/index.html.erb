<% content_for :link do %>
<% end %>
<% content_for :script do %>
<script type="text/javascript" src="/javascripts/desktop/src/base.js"></script>
<% end %>
<div class="main">
	<div class="main-inner">
		<div class="container">
			<div class="row">
				<div class="span6">
					<div class="widget widget-table action-table">
						<div class="widget-header">
							<i class="icon-map-marker"></i>
							<h3>Badges</h3>
						</div>
						<div class="widget-content">
							<table class="table table-striped table-bordered">
								<tbody>
									<%= simple_form_for @merchant, :url => update_badges_path, :html => {:novalidate => true} do |f| %>
									<%= f.simple_fields_for :badges do |builder| %>
									<%= render "badge_fields", :f => builder %>
									<% end %>
									<%= f.button :submit %>
									<% end %>
								</tbody>
							</table>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>