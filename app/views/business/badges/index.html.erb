<% content_for :link do %>
<% end %>
<% content_for :script do %>
<script type="text/javascript" src="/javascripts/desktop/src/base.js"></script>
<% end %>
<div class="main">
	<div class="main-inner">
		<div class="container">
			<% if current_merchant.status == :pending %>
			<ul class="pager">
				<li class="previous">
					<%= link_to 'Continue Setup', setup_path %>
				</li>
			</ul>
			<% end %>
			<div class="row">
				<div class="span9">
					<div class="widget widget-table action-table">
						<div class="widget-header">
							<i class="icon-map-marker"></i>
							<h3>Badges (<%= link_to("Edit Badges", edit_badges_path) %>)</h3>
						</div>
						<div class="widget-content">
							<table class="table table-striped table-bordered">
								<tbody>
									<% @badges.each do |badge| %>
									<tr>
										<td><% if current_merchant.custom_badges %><%= badge.custom_type.display_value %><% else %><%= badge.eager_load_type.display_value %><% end %></td>
										<td><%= badge.visits %></td>
									</tr>
									<% end %>
									<% if @badges.length == 0 %>
									<tr>
										<td colspan="2" style="text-align:center;">You have no badges at the moment.</td>
									</tr>
									<% end %>
								</tbody>
							</table>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>