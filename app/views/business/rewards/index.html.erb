<%= render 'layouts/business/tabs' %>
<%= form_tag rewards_path, :class => 'form-stacked marchant-form', :method => 'get' do %>
<div>
   <%= label_tag do  %> <h3>Enter Rewards Code</h3>
   <% end %>
   <%= text_field_tag :search, params[:search], :class => 'xxlarge' %>
   <%= submit_tag "Lookup Rewards", :type => 'submit', :name => nil, :style => 'line-height:34px;', :class => 'btn large right' %>
   <% end %>
</div>
<% if @reward %>
<table style="margin-bottom:0px;">
   <thead>
      <tr>
         <th class="green span6">Reward#</th>
         <th class="green span4">Status</th>
         <th class="green span6">Redemption Date</th>
         <th class="green span3">Action</th>
      </tr>
   </thead>
   <tr>
      <td class="span6"><%= @reward.reward_code %></td>
      <td class="span4"><%= @reward.redeemed ? "Redeemed" : "Not Redeemed" %></td>
      <td class="span6"><%= @reward.redeemed ? @reward.update_ts.strftime("%b %d, %Y") : "Not Yet" %></td>
      <% if @reward.redeemed? %> <td class="span3">Nothing</td>
      <% else %> <td class="span3"><%= link_to 'Redeem', redeem_reward_url(@reward) %></td>
      <% end %>
   </tr>
</table>
<% elsif defined? @reward %>
<div>
   Not Found<div
   <% end %>
