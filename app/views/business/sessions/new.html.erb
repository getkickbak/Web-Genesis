<% content_for :script do %> <script type="text/javascript">
   $(document).ready($(function()
   {
      var msg = $("#error_explanation").html();
      if(msg)
      {
         Genesis.showErrMsg(msg, null, true);
      }
      var loginDialog = $("#loginDialog");
      loginDialog.modal(
      {
         keyboard : true,
         backdrop : 'static'
      });
   }));

</script>
<% end %>
<% if flash[:error] %>
<div style="display:none;" id="error_explanation">
   <p><%= flash[:error] %></p>
</div>
<% end %> <div class="clearfix" style="min-height:280px;"></div>
<div style="position:relative;">
   <div id="loginDialog" class="modal fade in" style="position:absolute;">
      <div class="modal-header">
         <h3>Sign In to JustForMyFriends!</h3>
      </div>
      <div class="modal-body alignLeft">
         <%= simple_form_for :session, :html => {:class=>
         "marchant-form"}, :url => sessions_path do |f| %>
         <%= f.input :email %>
         <%= f.input :password %>
      </div>
      <div class="modal-footer">
         <%= f.button :submit, "Sign In", :class => 'btn primary' %>
      </div>
   </div>
</div>
<% end %>