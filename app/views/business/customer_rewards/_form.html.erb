<% content_for :script do %> 
<script type="text/javascript" src="/javascripts/desktop/src/business/customer_reward.js"></script>
<% end %>
<div style="display:none;">
	<div id="price_per_point"><%= current_merchant.reward_model.price_per_point %></div>
</div>
<%= simple_form_for @customer_reward do |f| %>
	<%= f.input :type_id, :collection => CustomerRewardType.values[current_merchant.type.value][I18n.locale] %>
	<%= f.input :title %>
	<%= f.input :price %>
	<%= f.input :points %>
	<%= f.collection_check_boxes :venue_ids, current_merchant.venues, :id, :name, :checked => @venue_ids %>
	<%= f.button :submit %>
<% end %>
