<% content_for :link do %>
<link rel="stylesheet" href="/javascripts/desktop/css/add_business.css"/>
<!--[if lt IE 9]>
<link rel="stylesheet" href="/javascripts/desktop/css/add_business-ie8.css"/>
<![endif]-->
<% end %>
<% content_for :script do %>
<script type="text/javascript" src="/javascripts/desktop/src/business/customer_reward.js"></script>
<% end %>
<div style="display:none;">
   <div id="price_per_point">
      <%= current_merchant.reward_model.price_per_point %>
   </div>
   <div id="rebate_rate">
      <%= current_merchant.reward_model.rebate_rate %>
   </div>
</div>
<div class="row-fluid">
   <div class="span3"></div>
   <div class="span6">
      <%= simple_form_for @customer_reward do |f| %>
      <%= f.input :type_id, :collection => CustomerRewardType.values[current_merchant.type.value][I18n.locale] %>
      <%= f.input :title %>
      <%= f.input :price %>
      <%= f.input :points %>
      <%= f.input :mode, :collection => CustomerReward::Modes %>
      <div class="venues">
         <div>
            Venues
         </div>
         <%= f.collection_check_boxes :venue_ids, current_merchant.venues, :id, :display_name, :item_wrapper_tag => :div, :item_wrapper_class => 'checkbox', :checked => @venue_ids %>
      </div>
      <%= f.button :submit, :class => "btn primary noWrap" %>
      <% end %>
   </div>
</div>
