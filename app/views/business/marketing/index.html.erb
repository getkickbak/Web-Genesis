<% content_for :link do %>
<% end %>
<% content_for :script do %>
<script type="text/javascript" src="/javascripts/desktop/src/business/base.js"></script>
<% end %>
<div class="main">
   <div class="main-inner">
      <div class="container">
         <div class="row">
            <div class="span6">
               <div class="widget widget-table action-table">
                  <div class="widget-header">
                     <i class="icon-picture"></i>
                     <h3>Marketing Posters</h3>
                  </div>
                  <div class="widget-content">
                     <table class="table table-striped table-bordered">
                        <thead>
                           <tr>
                              <th>Promotional Poster</th>
                              <th class="td-actions"></th>
                           </tr>
                        </thead>
                        <tbody>
                           <tr>
                              <td>Poster</td>
                              <td class="td-actions">
                              <!-- -->
                              <%= link_to("http://files.getkickbak.com/poster.jpg", :class=>"btn btn-small btn-warning", :title=>"print" ) do %>
                              <!-- -->
                              <i class="btn-icon-only icon-print"></i>
                              <!-- -->
                              <% end %>
                              <!-- -->
                              </td>
                           </tr>
                        </tbody>
                     </table>
                  </div>
               </div>
            </div>
            <div class="span6">
               <div class="widget widget-table action-table">
                  <div class="widget-header">
                     <i class="icon-paper-clip"></i>
                     <h3>Toppers</h3>
                  </div>
                  <div class="widget-content">
                     <table class="table table-striped table-bordered">
                        <thead>
                           <tr>
                              <th>Table Toppers</th>
                              <th class="td-actions"></th>
                           </tr>
                        </thead>
                        <tbody>
                           <% @venues.each do |venue| %>
                           <tr>
                              <td><%= venue.name %></td>
                              <td class="td-actions">
                              <!-- -->
                              <%= link_to(::Common.generate_full_merchant_qr_code_image_file_path(current_merchant.id,venue.check_in_code.qr_code_img), :class => "btn btn-small btn-warning", :title=>"print" ) do %>
                              <!-- -->
                              <i class="btn-icon-only icon-print"></i>
                              <!-- -->
                              <% end %>
                              <!-- -->
                              </td>
                           </tr>
                           <% end %>
                        </tbody>
                     </table>
                  </div>
               </div>
            </div>
         </div>
      </div>
   </div>
</div>
