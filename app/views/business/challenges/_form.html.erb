<%= simple_form_for @challenge do |f| %>
	<% if @challenge.errors.any? %>
	<div id="error_explanation">
		<h2><%= pluralize(@challenge.errors.count, "error") %> prohibited this challenge from being saved:</h2>

		<ul>
			<% @challenge.errors.full_messages.each do |msg| %>
			<li>
				<%= msg %>
			</li>
			<% end %>
		</ul>
	</div>
	<% end %>
	<%= f.input :type, :collection => @default_challenge_types %>
	<%= f.input :name %>
	<%= f.input :description, :as => :text, :input_html => { :rows => 10 } %>
	<%= f.input :require_verif, :as => :hidden, :input_html => { :value => @challenge.require_verif } %>
	<%= f.simple_fields_for :data do |builder| %>
		<%= render "challenge_data", :f => builder, :type => @challenge.type %>
	<% end %>
	<%= f.input :points %>
	<%= f.button :submit %>
<% end %>
