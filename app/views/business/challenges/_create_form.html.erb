<% end %>
<div style="display:none;">
	<div id="price_per_point">
		<%= current_merchant.reward_model.price_per_point %>
	</div>
	<div id="rebate_rate">
		<%= current_merchant.reward_model.rebate_rate %>
	</div>
</div>
<%= simple_form_for @challenge, :html => { :class => 'form-horizontal' } do |f| %>
<fieldset>
	<%= f.input :type_id, :collection => @available_challenge_types, :input_html => { :class => 'input-medium' } %>
	<% if @challenge.type && @challenge.type.value == 'facebook' %>
	<div class="challenge_desc">
		<span>When someone connects using Facebook</span><%= f.input :name, :as => :hidden %>
	</div>
	<%= f.input :description, :as => :hidden %>
	<%= f.input :require_verif, :as => :hidden %>
	<% if current_merchant.reward_model.type.value == "amount_spent" %>
	<%= f.input :points, :as => :hidden %>
	<div class="challenge_desc_last">
		<span>they will get $</span>
		<input id="challenge_reward_amount" name="challenge[reward_amount]" type="text" class="input-small" placeholder=""/>
		<span>worth of points every 3 visits</span>
	</div>
	<% else %>
	<div class="challenge_desc_last">
		<span>they will get</span>
		<input id="challenge_points" name="challenge[points]" type="text" class="input-small" placeholder=""/>
		<span>points every 3 visits</span>
	</div>
	<% end %>
	<% elsif @challenge.type && @challenge.type.value == 'birthday' %>
	<div class="challenge_desc">
		<span>When someone visits on a birthday</span><%= f.input :name, :as => :hidden %>
