<% content_for :link do %>
<% end %>
<% content_for :script do %>
<script type="text/javascript" src="/javascripts/desktop/src/base.js"></script>
<% end %>
<div id="main" class="main">
	<div class="main-inner">
		<div class="container">
			<div class="row">
				<div class="span3">
					<div class="widget">
						<div class="widget-content">
							<%= render :partial => '/business/merchants/menu' %>
						</div>
					</div>
				</div>
				<div class="span9">
					<div class="widget">
						<div class="widget-content">
							<h3>Invoices</h3>
							<div style="margin:20px 0 10px 0;">
								<table class="table table-striped table-bordered">
									<thead>
										<tr>
											<th>Date</th>
											<th>Invoice#</th>
											<th class="td-actions">Amount</th>
										</tr>
									</thead>
									<tbody>
										<% @invoices.each do |invoice| %>
										<tr>
											<td><%= link_to invoice.created_ts.strftime("%b %d, %Y"), invoice_path(invoice) %></td>
											<td><%= invoice.invoice_id %></td>
											<td class="td-actions">$<%= "%0.2f" % invoice.amount %></td>
										</tr>
										<% end %>
										<% if @invoices.length == 0 %>
										<tr>
											<td colspan="3" class="no-data">You have no invoices at the moment.</td>
										</tr>
										<% end %>
									</tbody>
								</table>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
