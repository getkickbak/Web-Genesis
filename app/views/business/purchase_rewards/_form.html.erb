<%= simple_form_for @purchase_reward do |f| %>
	<%= f.input :title %>
	<%= f.input :average_price %>
	<%= f.input :reward_ratio %>
	<%= f.input :points %>
	<%= f.collection_check_boxes :venue_ids, Venue.all(:fields => [:id, :name], Venue.merchant.id => current_merchant.id), :id, :name, :checked => @venue_ids %>
	<%= f.button :submit %>
<% end %>
