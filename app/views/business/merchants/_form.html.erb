<% end %>

<%= simple_form_for @merchant, :url => update_account_path, :html => { :class => 'form-horizontal' } do |f| %>
<fieldset>
   <%= f.input :name, :input_html=>{:class => "input-xxlarge"} %>
   <%= f.input :description, :as => :text, :input_html=>{:class => "input-xxlarge" }, :rows => 10 %>
   <%= f.input :email, :input_html=>{:class => "input-xxlarge"} %>
   <%= f.input :account_first_name, :input_html=>{:class => "input-xxlarge"} %>
   <%= f.input :account_last_name, :input_html=>{:class => "input-xxlarge"} %>
   <%= f.input :phone, :input_html=>{:class => "input-medium"} %>
   <%= f.input :website, :input_html=>{:class => "input-xxlarge"}, :required => false %>
   <%= f.input :facebook_page_id, :input_html=>{:class => "input-xxlarge"}, :required => false %>
   <br />
   <div class="form-actions">
      <%= f.button :submit , "Update", :class => 'btn btn-primary' %>
      <%= link_to("Cancel", account_path, :class => 'btn') %>
   </div>
   <!-- /form-actions -->
</fieldset>
<% end %>
