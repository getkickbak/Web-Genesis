<% content_for :link do %>
<!--[if lt IE 9]>
<link rel="stylesheet" href="/javascripts/desktop/css/add_business-ie8.css"/>
<![endif]-->
<% end %>
<p id="notice"><%= notice %></p>
<div class="row-fluid">
   <div class="span3"></div>
   <div class="span6">
      <p><b>Name:</b> <%= @merchant.name %> </p>

      <p><b>Description:</b> <%= @merchant.description %> </p>

      <p><b>Email:</b> <%= @merchant.email %> </p>

      <p><b>Account First Name</b> <%= @merchant.account_first_name %> </p>

      <p><b>Account Last Name</b> <%= @merchant.account_last_name %> </p>

      <p><b>Phone:</b> <%= @merchant.phone %> </p>

      <% if not @merchant.website.empty? %>
      <p><b>Website</b> <%= @merchant.website %> </p>
      <% end %>
      <%= link_to 'Edit', edit_account_path %> |
      <%= link_to 'Back', account_path %>
   </div>
</div>
