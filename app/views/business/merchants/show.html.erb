<% content_for :link do %>
<% end %>
<% content_for :script do %>
<script type="text/javascript">
	$(document).ready($(function() {
	var msg=$("#notice").html();
	if(msg) {
	Genesis.showWarningMsg(msg,null,true);
	}
	}));
</script>
<script type="text/javascript" src="/javascripts/desktop/src/base.js"></script>
<% end %>
<% if flash[:notice] %>
<div style="display:none;" id="notice">
	<p>
		<%= flash[:notice] %>
	</p>
</div>
<% end %>
<div class="main">
	<div class="main-inner">
		<div class="container">
			<div class="row">
				<div class="span9">
					<div class="widget ">
						<div class="widget-header">
							<i class="icon-user"></i>
							<h3>Your Account</h3>
						</div>
						<!-- /widget-header -->
						<div class="widget-content">
							<div class="tabbable">
								<ul class="nav nav-tabs">
									<li class="active">
										<a href="#profile" data-toggle="tab">Profile</a>
									</li>
								</ul>
								<br>
								<div class="tab-content">
									<div class="tab-pane active" id="profile">
										<p>
											<b>Name:</b> <%= @merchant.name %>
										</p>

										<p>
											<b>Description:</b> <%= @merchant.description %>
										</p>

										<p>
											<b>Email:</b> <%= @merchant.email %>
										</p>

										<p>
											<b>Account First Name:</b> <%= @merchant.account_first_name %>
										</p>

										<p>
											<b>Account Last Name:</b> <%= @merchant.account_last_name %>
										</p>

										<p>
											<b>Phone:</b> <%= @merchant.phone %>
										</p>

										<% if not @merchant.website.empty? %>
										<p>
											<b>Website:</b> <%= @merchant.website %>
										</p>
										<% end %>
										<%= link_to 'Edit', edit_account_path %>
									</div>
								</div>
							</div>
						</div>
						<!-- /widget-content -->
					</div>
					<!-- /widget -->
				</div>
			</div>
			<!-- /row -->
		</div>
		<!-- /container -->
	</div>
	<!-- /main-inner -->
</div>
<!-- /main -->
