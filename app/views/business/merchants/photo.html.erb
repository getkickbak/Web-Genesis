<% content_for :link do %>
<!--[if lt IE 9]>
<link rel="stylesheet" href="/javascripts/desktop/css/add_business-ie8.css"/>
<![endif]-->
<% end %>
<div class="row-fluid">
   <div class="span3"></div>
   <div class="span6">
      <div style="margin: 10px 0 10px 160px;">
         <%= image_tag @merchant.photo_url.to_s %>
      </div>
      <%= simple_form_for @merchant, :url => update_account_photo_path, :html => { :class => 'form-horizontal', :multipart => true} do |f| %>
      <%= f.input :photo, :as => :file %>
      <%= f.button :submit, 'Upload', :class => 'btn-primary' %>
      <% end %>
   </div>
</div>
<div class="row-fluid">
   <div class="span3"></div>
   <div class="span6">
      <div style="margin: 10px 0 10px 160px;">
         <%= image_tag @merchant.alt_photo_url.to_s %>
      </div>
      <%= simple_form_for @merchant, :url => update_account_alt_photo_path, :html => { :class => 'form-horizontal', :multipart => true} do |f| %>
      <%= f.input :alt_photo, :as => :file %>
      <%= f.button :submit, 'Upload', :class => 'btn-primary' %>
      <% end %>
   </div>
   <% if current_merchant.status == :pending %>
   <%= link_to 'Continue Setup', setup_path %>
   <% end %>
</div>
