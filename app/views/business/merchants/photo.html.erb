<% content_for :link do %>
<% end %>
<% content_for :script do %>
<script type="text/javascript" src="/javascripts/desktop/src/business/base.js"></script>
<% end %>
<div class="main">
   <div class="main-inner">
      <div class="container">
         <div class="row">
            <div class="span6">
               <div class="widget widget-table action-table">
                  <div class="widget-header">
                     <i class="icon-map-marker"></i>
                     <h3>Primary Photo <% if current_merchant.status == :pending %>
                        (<%= link_to 'Continue Setup', setup_path %>)
                        <% end %>
                        <!---->
                     </h3>
                  </div>
                  <div class="widget-content" style="text-align:center;">
                     <%= image_tag @merchant.photo_url.to_s, :style=> "padding:1.6em;" %>
                     <%= simple_form_for @merchant, :url => update_account_photo_path, :html => { :class => 'form-inline', :multipart => true} do |f| %>
                     <fieldset>
                        <%= f.input :photo, :as => :file, :label => false %>
                        <br />
                        <div class="form-actions">
                           <%= f.button :submit , "Upload", :class => 'btn btn-primary' %>
                        </div>
                     </fieldset>
                     <!-- /form-actions -->
                     <% end %>
                  </div>
               </div>
            </div>
            <div class="span6">
               <div class="widget widget-table action-table">
                  <div class="widget-header">
                     <i class="icon-map-marker"></i>
                     <h3>Secondary Photo <% if current_merchant.status == :pending %>
                        (<%= link_to 'Continue Setup', setup_path %>)
                        <% end %>
                        <!---->
                     </h3>
                  </div>
                  <div class="widget-content" style="text-align:center;">
                     <%= image_tag @merchant.alt_photo_url.to_s, :style=> "padding:1.6em;" %>
                     <%= simple_form_for @merchant, :url => update_account_alt_photo_path, :html => { :class => 'form-inline', :multipart => true} do |f| %>
                     <fieldset>
                        <%= f.input :alt_photo, :as => :file, :label => false %>
                        <br />
                        <div class="form-actions">
                           <%= f.button :submit , "Upload", :class => 'btn btn-primary' %>
                        </div>
                        <!-- /form-actions -->
                     </fieldset>
                     <% end %>
                  </div>
               </div>
            </div>
         </div>
      </div>
   </div>
</div>

