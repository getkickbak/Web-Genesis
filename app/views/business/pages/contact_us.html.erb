<% content_for :script do %> <script type="text/javascript">
   $(document).ready($(function()
   {
      var msg = $("#notice").html();
      if(msg) {
         Genesis.showWarningMsg(msg, null, true);
      }
   }));

</script>
<% end %>
<% if @notice %>
<div style="display:none;" id="notice">
   <p><%= @notice %></p>
</div>
<% end %>
<div class="row">
   <div class="span22">
      <h2>Email KICKBAK</h2>
      <div class="panelBodyHighlights">
         <%= simple_form_for @contact, :url => create_contact_path, :html => { :class => 'form-vertical' } do |f| %>
         <%= f.input :name %>
         <% if signed_in? && @contact.errors.empty? %>
         <%= f.input :email, :input_html => { :value => current_merchant.email } %>
         <% else %>
         <%= f.input :email %>
         <% end %>
         <%= f.input :topic, :collection => Contact.merchant_topic_list %>
         <%= f.input :message, :as => :text, :input_html => { :rows => 10 } %>
         <div class="alignLeft">
            <%= f.button :submit, 'Submit Request', :disable_with => "Working...", :class =>"large primary btn" %>
         </div>
         <% end %>
      </div>
   </div>
   <div id="faq" class="span10">
      <h2>Contact Info</h2>
      <div class="panelBodyHighlights">
         <p>Email: <a href="mailto:help@getkickbak.com">help@getkickbak.com</a></p>
      </div>
   </div>
</div>