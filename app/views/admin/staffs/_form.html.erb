<%= simple_form_for [@staff] do |f| %>
<%= f.input :name %>
<%= f.input :email %>
<%= f.input :role, :collection => Staff::Roles%>
<%= f.input :status, :collection => Staff::Statuses %>
<%= f.input :current_password %>
<%= f.input :password %>
<%= f.input :password_confirmation %>
<%= f.button :submit %>
<% end %> 