<div class="content">
	<%= simple_form_for  @staff, :url => update_account_path, :html => { :class => 'form-horizontal' } do |f| %>
	<%= f.input :name %>
	<%= f.input :email %>
	<%= f.input :current_password %>
	<%= f.input :password %>
	<%= f.input :password_confirmation %>
	<%= f.button :submit, :class => 'btn-primary' %>
	<% end %>
</div>
