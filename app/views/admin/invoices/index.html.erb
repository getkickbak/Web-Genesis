<% content_for :link do %>
<% end %>
<% content_for :script do %>
<script type="text/javascript" src="/javascripts/desktop/src/base.js"></script>
<% end %>
<div id="main" class="main">
	<div class="main-inner">
		<div class="container">
			<div class="row">
				<div class="span1"></div>
				<div class="span10">
					<div class="widget ">
						<div class="widget-header">
							<i class="icon-money"></i>
							<h3>Merchant</h3>
						</div>
						<!-- /widget-header -->
						<div class="widget-content">
							<div class="tabbable">
								<ul class="nav nav-tabs">
									<li>
										<a href="<%= merchant_path(@merchant) %>">Info</a>
									</li>
									<li>
										<a href="<%= payment_subscription_merchant_path(@merchant) %>">Payment Subscription</a>
									</li>
									<li class="active">
										<a href="<%= merchant_invoices_path(@merchant) %>">Invoices</a>
									</li>
									<li>
										<a href="<%= merchant_devices_path(@merchant) %>">Devices</a>
									</li>
								</ul>
								<br>
								<div class="tab-content">
									<div class="tab-pane active" id="subscription">
										<div class="widget widget-table action-table">
											<div class="widget-header">
												<i class="icon-map-marker"></i>
												<h3>Invoices (<%= link_to("New Invoice", new_merchant_invoice_path(@merchant)) %>)</h3>
											</div>
											<div class="widget-content">
												<table class="table table-striped table-bordered">
													<thead>
														<tr>
															<th>Date</th>
															<th>Invoice#</th>
															<th class="td-actions">Amount</th>
														</tr>
													</thead>
													<tbody>
														<% @invoices.each do |invoice| %>
														<tr>
															<td><%= link_to invoice.created_ts.strftime("%b %d, %Y"), merchant_invoice_path(@merchant, invoice) %></td>
															<td><%= invoice.invoice_id %></td>
															<td class="td-actions">$<%= "%0.2f" % invoice.amount %></td>
														</tr>
														<% end %>
														<% if @invoices.length == 0 %>
														<tr>
															<td colspan="3" class="no-data">You have no invoices at the moment.</td>
														</tr>
														<% end %>
													</tbody>
												</table>
											</div>
										</div>
									</div>
								</div>
							</div>
						</div>
						<!-- /widget-content -->
					</div>
					<!-- /widget -->
				</div>
			</div>
			<!-- /row -->
		</div>
		<!-- /container -->
	</div>
	<!-- /main-inner -->
</div>
<!-- /main -->
