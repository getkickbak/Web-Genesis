<% content_for :link do %> <!--[if lt IE 9]>
<link rel="stylesheet" href="/javascripts/desktop/css/add_business-ie8.css"/>
<![endif]-->
<% end %>
<div class="row-fluid">
	<div class="span3"></div>
	<div class="span6">
		<ul class="nav nav-list well">
			<li class="nav-header">
				Users
			<% @users.each do |user| %>
			<li>
				<!-- -->
				<div style="position:relative;padding: 3px 15px">
					<!-- -->
					<%= link_to user.name, user_path(user) %>
					<%= user.email %>
					<%= link_to edit_user_path(user), :style=>'position:absolute;right:26px;' do %>
					<i class="icon-edit"></i>
					<!-- -->
					<% end %>
					<%= link_to user_path(user), :data => { :confirm => 'Do you want to delete this user?' }, :method => :delete, :style=>'position:absolute;right:0px;' do %>
					<i class="icon-remove"></i>
					<!-- -->
					<% end %>
				</div>
				<!-- -->
			</li>
			<% end %>
			<%= will_paginate @users %>
			<li>
				<%= link_to 'New User', new_user_path %>
			</li>
		</ul>
	</div>
</div>