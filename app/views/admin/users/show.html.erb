<% content_for :script do %>
<script type="text/javascript">
	$(document).ready($(function() {
	var notice_msg=$("#notice").html();
	if(notice_msg) {
	Genesis.showWarningMsg(notice_msg,null,true);
	}
	}));
</script>
<script type="text/javascript" src="/javascripts/desktop/src/base.js"></script>
<% end %>
<% if flash[:notice] %>
<div style="display:none;" id="notice">
	<p>
		<%= flash[:notice] %>
	</p>
</div>
<% end %>
<div id="main" class="main">
	<div class="main-inner">
		<div class="container">
			<div class="row">
				<div class="span1"></div>
				<div class="span10">
					<div class="widget ">
						<div class="widget-header">
							<i class="icon-user"></i>
							<h3>User</h3>
						</div>
						<!-- /widget-header -->
						<div class="widget-content">
							<div class="tabbable">
								<ul class="nav nav-tabs">
									<li class="active">
										<a href="#user" data-toggle="tab">Info</a>
									</li>
								</ul>
								<br>
								<div class="tab-content">
									<div class="tab-pane active" id="user">
										<div class="not-edit form-horizontal">
											<div class="control-group">
												<label class="control-label"> Name: </label>
												<div class="controls">
													<%= @user.name %>
												</div>
											</div>
											<div class="control-group">
												<label class="control-label"> Email: </label>
												<div class="controls">
													<%= @user.email %>
												</div>
											</div>
											<% if not @user.phone.empty? %>
											<div class="control-group">
												<label class="control-label"> Phone: </label>
												<div class="controls">
													<%= number_to_phone(@user.phone) %>
												</div>
											</div>
											<% end %>
											<div class="control-group">
												<label class="control-label"> Status: </label>
												<div class="controls">
													<%= @user.status %>
												</div>
											</div>
											<div>
               									<%= link_to 'Update Auth Token', update_auth_token_user_path(@user), :class=>"btn btn-small", :method => :post %>
            								</div>
            								<div style="margin: 10px 0;">
               									<%= link_to 'Login', user_session_url(:subdomain => "www", :auth_token => @user.authentication_token, :sid => @current_staff.id), :class=>"btn btn-small", :target => "_blank" %>
            								</div>
											<%= link_to 'Edit', edit_user_path(@user) %> |
											<%= link_to 'Back', users_path %>
										</div>
									</div>
								</div>
							</div>
						</div>
						<!-- /widget-content -->
					</div>
					<!-- /widget -->
				</div>
			</div>
			<!-- /row -->
		</div>
		<!-- /container -->
	</div>
	<!-- /main-inner -->
</div>
<!-- /main -->