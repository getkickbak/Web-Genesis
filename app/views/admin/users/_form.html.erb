<%= simple_form_for [@user] do |f| %>
<%= f.input :name %>
<%= f.input :email %>
<%= f.input :role, :collection => User::Roles %>
<%= f.input :status, :collection => User::Statuses %>
<%= f.input :current_password %>
<%= f.input :password %>
<%= f.input :password_confirmation %>
<%= f.button :submit %>
<% end %> 