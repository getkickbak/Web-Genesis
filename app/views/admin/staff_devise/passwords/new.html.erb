<div class="content">
	<div style="margin:auto;width:500px;padding: 20px; border: 1px solid;">
		<h3 class="alignCenter">Forgot your password?</h3>
		<%= simple_form_for resource, :url => password_path(resource_name), :html => { :method => :post } do |f| %>
		<%= f.input :email %>
		<%= f.button :submit, "Reset", :class => 'btn primary' %>
		<% end %>
	</div>
</div>