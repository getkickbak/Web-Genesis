<div class="content">
	<%= simple_form_for [@merchant, @device], :html => { :class => 'form-horizontal' } do |f| %>
	<%= f.input :venue_id, :collection => @merchant.venues.all(:status => :active, :order => [ :id.asc ]),
		:label_method => :name,
		:value_method => :id,
		:include_blank => "", :input_html=>{:class => "input-xlarge"} %>
	<%= f.input :serial_num %>
	<%= f.input :status, :collection => Device::Statuses %>
	<%= f.button :submit, :class => 'btn-primary' %>
	<% end %>
</div>