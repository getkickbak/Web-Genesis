<% content_for :link do %>
<% end %>
<div class="main">
   <div class="row-fluid">
      <div class="span3"></div>
      <div class="span6">
         <ul class="nav nav-list well">
            <li class="nav-header"> Devices </li>
            <% @devices.each do |device| %>
            <li>
               <!-- -->
               <div style="position:relative;padding: 3px 15px">
                  <!-- -->
                  <%= link_to device.serial_num, merchant_device_path(@merchant, device) %>
                  <%= device.merchant_venue.name %>
                  <%= device.status %>
                  <%= link_to edit_merchant_device_path(@merchant, device), :style=>'position:absolute;right:26px;' do %>
                  <i class="icon-edit"></i>
                  <!-- -->
                  <% end %>
                  <%= link_to merchant_device_path(@merchant, device), :data => { :confirm => 'Do you want to delete this device?' }, :method => :delete, :style=>'position:absolute;right:0px;' do %>
                  <i class="icon-remove"></i>
                  <!-- -->
                  <% end %>
               </div>
               <!-- -->
            </li>
            <% end %>
            <%= will_paginate @devices %>
            <li> <%= link_to 'New Device', new_merchant_device_path(@merchant) %> </li>
         </ul>
      </div>
   </div>
</div>