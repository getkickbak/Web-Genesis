<% content_for :script do %>
<script type="text/javascript">
	$(document).ready($(function() {
	var notice_msg=$("#notice").html();
	if(notice_msg) {
	Genesis.showWarningMsg(notice_msg,null,true);
	}
	}));
</script>
<script type="text/javascript" src="/javascripts/desktop/src/base.js"></script>
<% end %>
<% if flash[:notice] %>
<div style="display:none;" id="notice">
	<p>
		<%= flash[:notice] %>
	</p>
</div>
<% end %>
<div class="main">
	<div class="main-inner">
		<div class="container">
			<div class="row">
				<div class="span12">
					<div class="widget widget-table action-table">
						<div class="widget-header">
							<i class="icon-money"></i>
							<h3>Merchants Listing (<%= link_to("New Merchant", new_merchant_path) %>)</h3>
						</div>
						<div class="widget-content">
							<%= will_paginate @merchants %>
							<table class="table table-striped table-bordered">
								<thead>
									<tr>
										<th>Name</th>
										<th class="td-actions">Email</th>
										<th class="td-actions">Actions</th>
									</tr>
								</thead>
								<tbody>
									<% @merchants.each do |merchant| %>
									<tr>
										<td><%= link_to merchant.name, merchant_path(merchant) %></td>
										<td class="td-actions"><%= merchant.email %></td>
										<td class="td-actions"><!-- --> <%= link_to(edit_merchant_path(merchant), :class=>"btn btn-small btn-warning", :title=>"edit") do %> <!-- --><i class="btn-icon-only icon-edit"></i><!-- --> <% end %>
										<%= link_to merchant_path(merchant), :data => { :confirm => 'Do you want to delete this merchant?' }, :method => :delete, :class=>"btn btn-small", :title=>"delete" do %> <!-- --><i class="btn-icon-only icon-remove"></i><!-- --> <% end %> </td>
									</tr>
									<% end %>
									<% if @merchants.length == 0 %>
									<tr>
										<td colspan="2" class="no-data">You have no merchants</td>
									</tr>
									<% end %>
								</tbody>
							</table>
							<%= will_paginate @merchants %>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>