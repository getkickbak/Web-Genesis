<div class="content">
	<%= simple_form_for [@merchant], :html => { :class => 'form-horizontal' } do |f| %>
	<%= f.input :type_id, :collection => MerchantType.values[I18n.locale] %>
	<%= f.input :name %>
	<%= f.input :description, :as => :text, :input_html => { :rows => 10 } %>
	<%= f.input :email %>
	<%= f.input :account_first_name %>
	<%= f.input :account_last_name %>
	<%= f.input :phone %>
	<%= f.input :website %>
	<%= f.input :role, :collection => Merchant::Roles %>
	<%= f.input :status, :collection => Merchant::Statuses %>
	<%= f.input :will_terminate, :as => :boolean %>
	<% if @merchant.will_terminate %>
	<%= f.input :termination_date, :as => :date_picker, :input_html => { :class => 'input-xlarge' }, :wrapper_html => { :id => 'merchant_termination_date_wrap' } %>
	<% else %>
	<%= f.input :termination_date, :as => :date_picker, :input_html => { :class => 'input-xlarge' }, :wrapper_html => { :id => 'merchant_termination_date_wrap', :style => 'display:none;' } %>
	<% end %>
	<%= f.input :current_password %>
	<%= f.input :password %>
	<%= f.input :password_confirmation %>
	<%= f.button :submit, :class => 'btn-primary' %>
	<% end %>
</div>
