<%= simple_form_for [@merchant] do |f| %>
	<%= f.input :type_id, :collection => MerchantType.values[I18n.locale] %>
	<%= f.input :name %>
	<%= f.input :description, :as => :text, :input_html => { :rows => 10 } %>
	<%= f.input :email %>
	<%= f.input :account_first_name %>
	<%= f.input :account_last_name %>
	<%= f.input :password %>
	<%= f.input :password_confirmation %>
	<%= f.input :role %>
	<%= f.input :phone %>
	<%= f.input :website, :required => false %>
	<%= f.button :submit %>
<% end %>