<style type="text/css">
table td, table th {
	padding:10px 10px 9px;
	border:0 !important;
}
table {
	border:1px solid #DDD;
	width:100%;
	margin-bottom:18px;
	border-collapse:collapse;
	font-size:13px;
}
</style>
<div style="text-align:left;width:643px;border:#000000 1px solid;background:#fcf8e0;font-family:Arial, Helvetica, sans-serif;font-size:13px;">
	<center>
		<div style="font-size:11px;text-align:left;padding:20px;">
			<table cellspacing="1" style="font-size:13px;border-collapse: collapse;position:relative;">
				<tbody>
					<tr>
						<td colspan="2" style="font-size:24px;color:#c1c1c1;font-weight:bold;margin-right:10px;" valign="top"><span style="font-size:20px;float:left;width:350px;color:black;"><b>Free C$2 Tim Hortons Gift Card</b></span>
						<div style="float:right;">
							<%= @reward_code %>
						</div></td>
					</tr>
					<tr>
						<td colspan="2" style="margin-right:10px;text-align:center;" valign="top">
						<div style="float:left;width:320px;text-align:left;">
							<b>Redeem at:</b>
							<br>
							<%= @deal.merchant.name %>
							<br>
							<%= @deal.merchant.address1 %>
							<br>
							<% if @deal.merchant.address2 && !@deal.merchant.address2.empty? %>
							<%= @deal.merchant.address2 %>
							<br>
							<% end %>
							<%= @deal.merchant.city %>, <%= @deal.merchant.state %> <%= @deal.merchant.zipcode %>
							<br>
							<%= @deal.merchant.phone %>
							<br>
						</div><img src="<%= @deal.merchant.photo_url %>" border="0">
						</td>
					</tr>
					<tr>
						<td style="width:300px;vertical-align:middle;">
						<div style="float:left;">
							<b>Details:</b>
							<br>
							<%= @deal.details %>
						</div></td>
						<td style="vertical-align:middle;">
						<div style="text-align:center;">
							<img src="<%= @qr_code %>">
						</div></td>
					</tr>
				</tbody>
			</table>
		</div>
	</center>
	<br>
	<center>
		Questions? Email: <a rel="nofollow" ymailto="mailto:help@justformyfriends.com" target="_blank" href="mailto:help@justformyfriends.com">help@justformyfriends.com</a>
	</center>
	<br>
	<center>
		<a rel="nofollow" target="_blank" href="http://www.justformyfriends.com">JustForMyFriends.com</a>
	</center>
	<br>
</div>