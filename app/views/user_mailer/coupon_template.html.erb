<style type="text/css">
   table td, table th {
      padding:10px 10px 9px;
      border:0;
   }
   table td + td, table th + th {
      border:0;
   }
   table {
      border:1px solid #DDD;
      width:100%;
      margin-bottom:18px;
      border-collapse: collapse;
      font-size:13px;
   }
</style>
<div style="text-align:left;width:643px;border:#000000 1px solid;background:#fcf8e0;font-family:Arial, Helvetica, sans-serif;font-size:13px;">
   <div>
      <center>
         <div style="font-size:11px;text-align:left;padding:20px;">
            <% if @order.gift_option %>
            <div style="float:left;width:100%;">
               <table>
                  <tr>
                     <td style="width:50%;">
                     <img src="http://photos.justformyfriends.com/giftvoucher.jpg" border="0" style="width:100%;">
                     </td>
                     <td style="vertical-align:top;font-size:24px;font-weight:bold;">
                     <div style="margin-top:10px;">
                        <sup>
                           To:&nbsp;&nbsp;&nbsp;&nbsp;
                        </sup>
                        <%= @order.gift_option.to %>
                     </div><div style="border-top:1px dashed;padding-top:5px;margin-top:5px;"></div>
                     <div style="margin-top:5px;">
                        <sup>
                           From:
                        </sup>
                        <%= @order.gift_option.from %>
                     </div><div style="border-top:1px dashed;margin-top:5px;"></div>
                     <div style="font-size:13px;margin-top:10px;">
                        <%= @order.gift_option.message %>
                     </div></td>
                  </tr>
               </table>
            </div>
            <% end %>
            <div style="clear:both;border-top:2px dashed #c1c1c1;;margin:10px 0;"></div>
            <table border="0" cellspacing="1" style="font-size:13px;margin-top:10px;border-collapse: collapse;position:relative;float:left;">
               <tbody>
                  <tr border="0">
                     <td style="font-size:24px;color:#c1c1c1;font-weight:bold;margin-right:10px;" valign="top"><span style="font-size:20px;float:left;width:350px;color:black;"><b><%= @coupon_title %></b></span>
                     <div style="float:right;">
                        <%= @coupon_id %>
                     </div></td>
                  </tr>
                  <tr border="0">
                     <td style="margin-right:10px;border:0;" valign="top">
                     <div style="float:left;">
                        <b>Redeem at:</b>
                        <br>
                        <%= @order.deal.merchant.name %>
                        <br>
                        <%= @order.deal.merchant.address1 %>
                        <br>
                        <% if @order.deal.merchant.address2 && !@order.deal.merchant.address2.empty? %>
                        <%= @order.deal.merchant.address2 %>
                        <br>
                        <% end %>
                        <%= @order.deal.merchant.city %>, <%= @order.deal.merchant.state %> <%= @order.deal.merchant.zipcode %>
                        <br>
                        <%= @order.deal.merchant.phone %>
                        <br>
                     </div>
                     <img style="float:right;" src="http://photos.justformyfriends.com/logo.png" border="0">
                     <!--
                     <img style="margin-right:20px;float:right" src="<%= @order.deal.merchant.photo_url %>" border="0">
                     -->
                     </td>
                  </tr>
                  <tr border="0">
                     <td style="border:0;">
                     <div style="float:left;width:350px;">
                        <b>Details:</b>
                        <br>
                        <%= @order.deal.details %>
                     </div>
                     <div style="text-align:center;">
                        <img src="<%= @qr_code %>">
                     </div></td>
                  </tr>
               </tbody>
            </table>
         </div>
         <br>
         <center>
            Questions? Email: <a rel="nofollow" ymailto="mailto:help@justformyfriends.com" target="_blank" href="mailto:help@justformyfriends.com">help@justformyfriends.com</a>
         </center>
         <br>
         <center>
            <a rel="nofollow" target="_blank" href="http://www.justformyfriends.com">JustForMyFriends.com</a>
         </center>
         <br>
      </center>
   </div>
</div>