<% content_for :script do %>
<script type="text/javascript" src="/javascripts/desktop/src/business/base.js"></script>
<% end %>
<div class="main">
   <div class="main-inner">
      <div class="container">
         <div class="row">
            <div class="span12">
               <div class="error-container">
                  <h1>Oops!</h1>
                  <h2><%= headline %></h2>
                  <div class="error-details">
                     <% messages.each do |message| %>
                     <%= message %></br/>
                     <% end %>
                  </div>
                  <!-- /error-details -->
                  <div class="error-actions">
                     <a href="/dashboard" class="btn btn-large btn-primary"> <i class="icon-chevron-left"></i> &nbsp;
                     Back to Dashboard </a>
                     <a href="/contact_us" class="btn btn-large"> <i class="icon-envelope"></i> &nbsp;
                     Contact Support </a>
                  </div>
                  <!-- /error-actions -->
               </div>
               <!-- /error-container -->
            </div>
            <!-- /span12 -->
         </div>
         <!-- /row -->
      </div>
      <!-- /container -->
   </div>
</div>
