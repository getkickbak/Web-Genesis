<h1>Listing merchants</h1>

<table>
	<tr>
		<th>Name</th>
		<th>Address</th>
		<th>Phone</th>
		<th></th>
		<th></th>
		<th></th>
	</tr>

	<% @merchants.each do |merchant| %>
	<tr>
		<td><%= merchant.name %></td>
		<td><%= merchant.address %></td>
	    <td><%= merchant.phone %></td>
		<td><%= link_to 'Show', merchant_path(merchant) %></td>
		<td><%= link_to 'Edit', edit_merchant_path(merchant) %></td>
		<td><%= link_to 'Destroy', merchant_path(merchant), :confirm => 'Are you sure?', :method => :delete %></td>
	</tr>
	<% end %>
</table>

