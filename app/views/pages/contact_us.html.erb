<% content_for :link do %>
<link rel="stylesheet" href="/javascripts/desktop/css/contact_us.css"/>
<% end %>
<div class="container">
   <% if @notice %>
   <div class="alert alert-success">
      <a class="close" data-dismiss="alert" href="#">Ã—</a>
      <%= @notice %>
   </div>
   <% else %>
   <div class="alert alert-success" style="visibility: hidden;border-color:transparent;">&#160;</div>
   <% end %>
   <!--/Hero Unit-->
   <div class="row contactus">
      <div class="span12">
         <div class="hero-unit">
            <h1>KICKBAK is a game
               <br>
               designed for restaurants
               <br>
               and bars to reward
               <br>
               customer loyalty</h1>
         </div>
      </div>
   </div>
   <!--/Cotnact Form-->
   <div class="row">
      <div class="span4">
         <img class="createSlogan" src="http://files.getkickbak.com/v1/create.png"/>
      </div>
      <div class="span8 createForm">
         <h2>Email KICKBAK</h2>
         <%= simple_form_for @contact, :url => create_contact_path do |f| %>
         <%= f.input :name, :input_html => { :style => 'width:550px;' } %>
         <% if signed_in? && @contact.errors.empty? %>
         <%= f.input :email, :input_html => { :style => 'width:550px;', :value => current_user.email } %>
         <% else %>
         <%= f.input :email, :input_html => { :style => 'width:550px;' } %>
         <% end %>
         <%= f.input :topic, :collection => Contact.topic_list, :input_html => { :style => 'width:560px;' } %>
         <%= f.input :message, :as => :text, :input_html => { :style => 'width:550px;', :rows => 5 } %>
         <div class="pull-right">
            <%= f.button :submit, 'Send', :type => :image, :src => 'http://files.getkickbak.com/v1/send2.png' %>
         </div>
         <% end %>
      </div>
   </div>
</div>
