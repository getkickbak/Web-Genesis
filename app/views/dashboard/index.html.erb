<% content_for :script do %> <script type="text/javascript" src="/javascripts/desktop/src/base.js"></script>
<% end %>
<div class="main">
	<div class="main-inner">
		<div class="container">
			<% if current_user.tag && curernt_user.tag.status == :pending %>
			<div class="row">
				<div class="span9">
					<div class="alert alert-warning">
						<p>
							You have requested an access tag.  Please activate it by clicking on the button below:
						</p>
						<%= link_to 'Activate Tag', activate_tag_url, :class => "btn btn-warning" %>
					</div>
				</div>
			</div>
			<% end %>
			<div class="row">
				<div class="span9">
					<div class="widget widget-table action-table">
						<div class="widget-content">
							<table class="table table-striped table-bordered">
								<thead>
									<tr>
										<th>Merchants</th>
										<th class="td-actions">Badge</th>
										<th class="td-actions">Points</th>
										<th class="td-actions">Prize Points</th>
									</tr>
								</thead>
								<tbody>
									<% @customers.each do |customer| %>
									<tr>
										<td><%= customer.eager_load_merchant.name %></td>
										<td class="td-actions"><%= customer.eager_load_badge.eager_load_type.display_value %></td>
										<td class="td-actions"><%= customer.points %></td>
										<td class="td-actions"><%= customer.prize_points %></td>
									</tr>
									<% end %>
									<% if @customers.length == 0 %>
									<tr>
										<td colspan="2" class="no-data">You have not earned any points yet</td>
									</tr>
									<% end %>
								</tbody>
							</table>
						</div>
					</div>
				</div>
				<div class="span3">
					<div class="widget ">
						<div class="widget-header">
							<i class="icon-question-sign"></i>
							<h3>Extra Info</h3>
						</div>
						<div class="widget-content">
							<p>
								Did you know you can use KICKBAK with both an access tag and a mobile app?
							</p>
							<p>
								To get your access tag, just drop by your favorite KICKBAK location.
							</p>
							<p>
								To download our mobile app, just pick your favorite platform below:
							</p>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
