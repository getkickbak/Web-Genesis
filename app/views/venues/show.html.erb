<% content_for :link do %>
<% end %>
<% content_for :script do %>
<script type="text/javascript" src="/javascripts/desktop/src/base.js"></script>
<script type="text/javascript" src="/javascripts/desktop/src/venue.js"></script>
<% end %>
<div class="main">
	<div class="main-inner">
		<div class="container">
			<div class="row">
				<div class="span4">
					<div class="widget">
						<div class="widget-content">
							<div>
								<h4><%= @venue.name %></h4>
								<div>
									<%= image_tag @venue.merchant.photo.url %>
								</div>
								<div>
									<div>
										<%= @venue.address %>
									</div>
									<div>
										<%= "#{@venue.city}, #{@venue.state}" %>
									</div>
									<div>
										<%= @venue.zipcode %>
									</div>
								</div>
								<div>
									<div style="display:none">
										<div id="venue_name">
											<%= @venue.name %>
										</div>
										<div id="venue_address">
											<%= @venue.address %>
										</div>
										<div id="venue_city">
											<%= @venue.city %>
										</div>
										<div id="venue_state">
											<%= @venue.state %>
										</div>
										<div id="venue_country">
											<%= @venue.country %>
										</div>
									</div>
									<div id="gmap" class="" style="height:235px;width:100%;"></div>
								</div>
								<div>
									<h5>Other Locations</h5>
									<% @venue.merchant.venues.each do |venue| %>
									<% if venue.id != @venue.id %>
									<div>
										<div>
											<%= venue.name %>
										</div>
										<div>
											<%= venue.address %>
										</div>
										<div>
											<%= "#{venue.city}, #{venue.state}" %>
										</div>
										<div>
											<%= venue.zipcode %>
										</div>
									</div>
									<% end %>
									<% end %>
								</div>
							</div>
						</div>
					</div>
				</div>
				<div class="span8">
					<div class="widget">
						<div class="widget-content">
							<h5>About Us</h5>
							<p>
								<%= @venue.description %>
							</p>
						</div>
					</div>
					<div class="widget">
						<div class="widget-content">
							<p class="lead">
								You have <b><%= @customer.points %> points</b>
							</p>
						</div>
					</div>
					<% rewards = @customer_rewards.all(:mode => :reward, :order => [:points.asc]) %>
					<% prizes = @customer_rewards.all(:mode => :prize, :order => [:points.asc]) %>
					<div class="widget widget-table action-table">
						<div class="widget-header">
							<i class="icon-gift"></i>
							<h3>Rewards</h3>
						</div>
						<div class="widget-content">
							<table class="table table-striped table-bordered">
								<thead>
									<tr>
										<th>Rewards</th>
										<th class="td-actions">Points</th>
									</tr>
								</thead>
								<tbody>
									<% rewards.each do |customer_reward| %>
									<tr>
										<td><%= customer_reward.title %></td>
										<td class="td-actions"><%= customer_reward.points %></td>
									</tr>
									<% end %>
								</tbody>
							</table>
						</div>
					</div>
					<div class="widget">
						<div class="widget-content">
							<p class="lead">
								You have <b><%= @customer.prize_points %> prize points</b>
							</p>
						</div>
					</div>
					<div class="widget widget-table action-table">
						<div class="widget-header">
							<i class="icon-star"></i>
							<h3>Prizes</h3>
						</div>
						<div class="widget-content">
							<table class="table table-striped table-bordered">
								<thead>
									<tr>
										<th>Prizes</th>
										<th class="td-actions">Points</th>
									</tr>
								</thead>
								<tbody>
									<% prizes.each do |customer_reward| %>
									<tr>
										<td><%= customer_reward.title %></td>
										<td class="td-actions"><%= customer_reward.points %></td>
									</tr>
									<% end %>
								</tbody>
							</table>
						</div>
					</div>
					<!-- -->
				</div>
			</div>
		</div>
	</div>
</div>
