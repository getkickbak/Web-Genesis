   <body>
      <div id="fb-root"></div>
      <script src="http://connect.facebook.net/en_US/all.js#xfbml=1"></script>
      <div id="topbar" class="topbar">
         <div class="topbar-inner noWrap">
            <div class="container">
               <h3><a href="/">
                  <img width="200" style="position:absolute;top:0px;left:-10px;" src="http://photos.justformyfriends.com/logo.png"/>
                  Just For My Friends</a></h3>
               <% if (defined? @show_reward) && @show_reward %>
               <ul class="nav">
                  <li class=""><a href="/how_it_works">How It Works</a></li>
               </ul>
               <% end %>
               <ul class="nav secondary-nav">
                  <% if signed_in? %> <li id ="fb_account" class="menu" data-dropdown="dropdown"><div id="fb_login_img" style="display:none;float:left;"></div><a href="#" class="menu" style="float:left;">Account</a>
                     <ul class="menu-dropdown">
                        <li><a onclick="Genesis.resendVouchersPopup()">Resend Vouchers</a></li>
                        <li class="divider"></li>
                        <li><a onclick="Genesis.resendRewardPopup()">Resend Reward</a></li>
                     </ul></li>
                  <li class=""><a href="#" onclick="facebook_onLogout()">Sign Out</a></li>
                  <% end %> <li id="fb_login" style="display:none;"><fb:login-button scope="email,user_birthday,publish_stream,read_friendlists" on-login="" size="large" background="dark" length="short"></fb:login-button></li>
               </ul>
            </div>
         </div>
      </div>
      <div name="top" class="container">
         <div style="margin-top:100px;" >
            &#160;
         </div>
         <!-- Alert Messages -->
         <div class="alert-message warning fade hide">
            <a class="close">x</a>
         </div>
         <div class="alert-message error fade hide">
            <a class="close">x</a>
         </div>
         <%= yield %>
         <!-- Footer  -->
         <footer>
            <div class="right">
               <a href="/privacy">privacy policy</a>
               | <a href="/terms">terms</a>
               | <a href="/contact_us">contact us</a>
            </div>
            <p> &copy;JustForMyFriends 2011 </p>
         </footer>
      </div>
      <!-- General Message Modal Popup -->
      <div id="popupDialog" class="modal fade hide">
         <div class="modal-header">
            <a class="close">×</a>
            <h3></h3>
         </div>
         <div class="modal-body" style="text-align:center;"></div>
         <div class="modal-footer">
            <a class="btn primary">OK</a>
            <a class="btn secondary">Cancel</a>
         </div>
      </div>
      <!-- Referral Confirmation Popup -->
      <% if (defined? @deal) && !@deal.nil? && !@referral.nil? %>
      <div id="referralDialog" style="position:absolute;z-index:100000;display:none;top:0;width:100%;height:100%">
         <div class="modal fade in" style="position: relative; top: auto; left: auto; margin: 0 auto; z-index:1;top:100px;">
            <div class="modal-header">
               <a class="close">×</a>
               <h3>THANK YOU for your referral!</h3>
            </div>
            <div class="modal-body">
               <h4>Hey Eric!</h4>
               <p> Yay! An email is on its way for you to claim your reward. </p>
               <p> Now that you have submitted your referral, you are also eligible to buy this deal! </p>
            </div>
            <div class="modal-footer">
               <a  href="/deals/<%= @deal.id %>/confirmation" class="btn pricetag large">Buy Now! &raquo;</a>
            </div>
         </div>
      </div>
      <% end %>
      <!-- Server Side into passed to Client Side -->
      <div style="display:none;">
         <div id="systemTime">
            <%= Time.now().to_f*1000 %>
         </div>
         <% if signed_in? %>
         <div id="currFbId">
            <%= current_user.facebook_id %>
         </div>
         <% end %>
      </div>
   </body>
</html>
