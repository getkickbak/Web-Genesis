   <body>
      <div id="fb-root"></div>
      <script src="http://connect.facebook.net/en_US/all.js#xfbml=1"></script>
      <div id="topbar" class="topbar">
         <div class="topbar-inner noWrap">
            <div class="container">
               <h3><a href="/">Just For My Friends</a></h3>
               <ul class="nav">
                  <li class=" active">
                     <a href="#">Home</a>
                  </li>
                  <li class="">
                     <a href="#">About</a>
                  </li>
               </ul>
               <ul class="nav secondary-nav">
                  <% if signed_in? %>
                  <li id ="fb_account" class="menu" data-dropdown="dropdown">
                     <div id="fb_login_img" style="display:none;float:left;"></div>
                     <a href="#" class="menu" style="float:left;">Account</a>
                     <ul class="menu-dropdown">
                        <li>
                           <a href="#">Resend Vouchers</a>
                        </li>
                        <li class="divider"></li>
                        <li>
                           <a href="#">Resend Reward</a>
                        </li>
                     </ul>
                  </li>
                  <% end %>
                  <li id="fb_login" style="display:none;">
                     <fb:login-button perms="email,user_birthday,publish_stream" on-login="facebook_onLogin(false);" size="large" background="dark" length="short" autologoutlink="true"></fb:login-button>
                  </li>
                  <% if signed_in? %>
                  <li class="">
                     <a onclick="facebook_onLogout()">Sign Out</a>
                  </li>
                  <% end %>
               </ul>
            </div>
         </div>
      </div>
      <div name="top" class="container">
         <div style="margin-top:50px;" >&#160;</div>
         <div class="alert-message warning fade hide"><a class="close" onclick="$(this).parent().switchClass('in','hide')">x</a><h3></h3></div>
         <div class="alert-message error fade hide"><a class="close" onclick="$(this).parent().switchClass('in','hide')">x</a><h3></h3></div>
         <%= yield %>
         <footer>
            <p>
               &copy;Just For My Friends 2011
            </p>
         </footer>
      </div>
      <div id="popupModal" class="well popup" style="border: none; position:absolute;z-index:10000;display:none;width:100%;height:100%;top:0"></div>
      <!-- General Message Modal Popup -->
      <div id="popupDialog" class="modal fade hide">
         <div class="modal-header">
            <h3></h3>
            <a class="close">×</a>
         </div>
         <div class="modal-body" style="text-align:center;"></div>
         <div class="modal-footer">
            <a class="btn primary">OK</a>
         </div>
      </div>
      <!-- Referral Confirmation Popup -->
      <div id="referralDialog" style="position:absolute;z-index:100000;display:none;top:0;width:100%;height:100%">
         <div class="modal fade in" style="position: relative; top: auto; left: auto; margin: 0 auto; z-index:1;top:100px;">
            <div class="modal-header">
               <h3>THANK YOU for your referral!</h3>
               <a class="close">×</a>
            </div>
            <div class="modal-body">
               <h4>Hey Eric!</h4>
               <p>
                  Yay! An email is on its way for you to claim your reward.
               </p>
               <p>
                  Now that you have submitted your referral, you are also eligible to buy this deal!
               </p>
            </div>
            <div class="modal-footer">
               <a  href="/deals/runnersshop/confirmation" class="btn pricetag large">Buy Now! &raquo;</a>
            </div>
         </div>
      </div>
   </body>
